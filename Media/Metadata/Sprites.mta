.Sprite "Player-PacMan"
{
	.File "Surfaces\Player-PacMan.png"
	
	.Area "F1"				{ .Rect 0  0 46  46 }
	.Area "F2"				{ .Rect 46 0 92  46 }
	.Area "F3"				{ .Rect 92 0 138 46 }
	
	.Animation "Idle"
	{
		.Frame { .Area "F2" }
	}
	
	.Animation "Move"
	{
		.Delay 60
		
		.Frame { .Area "F2" }
		.Frame { .Area "F3" }
		.Frame { .Area "F2" }
		.Frame { .Area "F1" .Event "Eat" }
	}
}

.Sprite "Player-Ghost"
{
	.File "Surfaces\Player-Ghost.png"
	
	.Area "F1"				{ .Rect 0  0 46 46 }
	.Area "F2"				{ .Rect 46 0 92 46 }
	
	.Animation "Idle"
